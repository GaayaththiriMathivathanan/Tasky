<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasky">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tasky_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tasky">

        <!-- Splash screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity android:name=".LoginActivity" android:exported="false"/>
        <activity android:name=".SignupActivity" android:exported="false"/>
        <activity android:name=".ResetPasswordActivity" android:exported="false"/>
        <activity android:name=".ForgotPasswordActivity" android:exported="false"/>


        <!-- Core -->
        <activity android:name=".MainActivity" android:exported="false"/>
        <activity android:name=".TaskActivity" android:exported="false"/>
        <activity android:name=".ProfileActivity" android:exported="false"/>
        <activity android:name=".SettingsActivity" android:exported="false"/>
        <activity android:name=".ProfessionActivity" android:exported="false"/>
        <activity android:name=".ProfessionSelectionActivity" android:exported="false"/>

        <!-- Onboarding -->
        <activity android:name=".Onboarding1Activity" android:exported="false"/>
        <activity android:name=".Onboarding2Activity" android:exported="false"/>
        <activity android:name=".Onboarding3Activity" android:exported="false"/>

    </application>
</manifest>