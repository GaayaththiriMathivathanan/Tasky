<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Profession"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <Spinner
        android:id="@+id/spinnerProfession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/professions"
        android:layout_marginBottom="16dp"/>

    <!-- This will show only if "Other" is selected -->
    <EditText
        android:id="@+id/etOtherProfession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your profession"
        android:visibility="gone"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"/>
</LinearLayout>